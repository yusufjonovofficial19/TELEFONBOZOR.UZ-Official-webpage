---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image" href="https://static10.tgstat.ru/channels/_0/fb/fb64b4fab7048eeef8667ab397b0cedd.jpg" />
		<meta name="generator" content={Astro.generator} />
		<!-- CSS -->
		<link rel="stylesheet" href="src/assets/css/bootstrap.css">
		<link rel="stylesheet" href="src/assets/css/main.css">
		<!-- JS -->
		<script defer src="src/assets/js/bootstrap.js"></script>
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
</style>
